@page "/"

<div class="bg-light">

    <div class="container my-5">
        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">New Invoice</h5>
            </div>

            <div class="card-body">

                <!-- Top Section -->
                <div class="row g-4">

                    <!-- Billing Section -->
                    <div class="col-lg-6">
                        <h6 class="fw-bold mb-3">Billing</h6>

                        <div class="mb-3">
                            <label class="form-label">Customer</label>
                            <select class="form-select">
                                <option>Johnny B. Good</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Bill To</label>
                            <textarea class="form-control" rows="3">
1782 Bismarke Blvd.
Aspen, CO 80553
                        </textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Customer PO No.</label>
                                <input type="text" class="form-control" value="386 10045">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Customer Tax</label>
                                <select class="form-select">
                                    <option>Default</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Invoice Section -->
                    <div class="col-lg-6">
                        <h6 class="fw-bold mb-3">Invoice</h6>

                        <div class="mb-3">
                            <label class="form-label">Create From</label>
                            <select class="form-select">
                                <option>New Invoice</option>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date</label>
                                <input type="date" class="form-control">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Terms</label>
                                <select class="form-select">
                                    <option>Pay in Days - 30</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Salesperson</label>
                            <select class="form-select">
                                <option>Jane</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Invoice Number</label>
                            <input type="text" class="form-control" value="4589">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Deposit Account</label>
                            <select class="form-select">
                                <option>Checking Account</option>
                            </select>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Items Table -->
                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Qty</th>
                                <th>Item</th>
                                <th>Description</th>
                                <th>Unit Price</th>
                                <th>Tax</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Game Controller</td>
                                <td>Adaptive Gaming Controller L</td>
                                <td>$100.00</td>
                                <td>None</td>
                                <td>$100.00</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Lights</td>
                                <td>LED Light Bars</td>
                                <td>$10.00</td>
                                <td>None</td>
                                <td>$30.00</td>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>Stand</td>
                                <td>Gaming Stand</td>
                                <td>$35.00</td>
                                <td>None</td>
                                <td>$35.00</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Action Buttons -->
                <div class="mb-3">
                    <button class="btn btn-primary btn-sm">Add Item</button>
                    <button class="btn btn-outline-secondary btn-sm">Remove Item</button>
                    <button class="btn btn-warning btn-sm">Add Discount</button>
                </div>

                <!-- Comments -->
                <div class="mb-4">
                    <label class="form-label">Comments</label>
                    <textarea class="form-control" rows="2">Thank you for your business!</textarea>
                </div>

                <!-- Totals -->
                <div class="row justify-content-end">
                    <div class="col-md-4">
                        <div class="d-flex justify-content-between">
                            <strong>Subtotal:</strong>
                            <span>$165.00</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <strong>Total:</strong>
                            <span class="fw-bold">$165.00</span>
                        </div>
                    </div>
                </div>

                <!-- Footer Buttons -->
                <div class="mt-4 text-end">
                    <button class="btn btn-success">Record</button>
                    <button class="btn btn-secondary">Select</button>
                </div>

            </div>
        </div>
    </div>
</div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

