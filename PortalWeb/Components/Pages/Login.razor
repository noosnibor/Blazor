<div class="container-fluid bg-white">
    <div class="row ">

        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="login-card">

                <h3 class="fw-bold mb-2">Collection Managment 26</h3>
                <p class="text-muted mb-4">Please sign in to get started</p>

                <EditForm Model="parameter" OnValidSubmit="HandleValidSubmit_Click">
                    <DataAnnotationsValidator />

                   
                    <div class="mb-3">
                        <InputText class="form-control"
                                   @bind-Value="parameter.Username"
                                   placeholder="Username" />
                        <ValidationMessage For="@(() => parameter.Username)" />
                    </div>

                    <div class="mb-3">                       
                        <InputText class="form-control"
                                   type="password"
                                   @bind-Value="parameter.Password"
                                   placeholder="Password" />
                        <ValidationMessage For="@(() => parameter.Password)" />
                    </div>

                   @*  <button type="submit" class="btn btn-info text-white w-100 py-2">
                        Sign In
                    </button> *@
                    <button class="btn btn-info text-white w-100 py-2"
                            type="submit"
                            disabled="@submitting">
                        @if (submitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"
                                  role="status"
                                  aria-hidden="true"></span>
                            <span>Authenticating . . .</span>
                        }
                        else
                        {
							<span>Sign In</span>
                        }
                    </button>

                    <div class="divider"></div>

                    <p class="text-center text-muted small mt-4">
                        Create by: <strong>Miguel Robinson</strong>
                    </p>

                    <p class="text-center text-muted small mt-4">
                        version: 1.0
                    </p>
                </EditForm>

            </div>
        </div>


        <div class="col-lg-6 d-none d-lg-block p-0 ">
            <img src="/img/bg.jpg" class="img-cover vh-100" alt="Banner">
        </div>

    </div>
</div>

@code {
    // Model and objects declarations
    private LoginDto parameter = new();

    // Class variables
    private bool submitting = false;
    private bool toast = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Yield();

            var uri = Nav.ToAbsoluteUri(Nav.Uri);
            var query = QueryHelpers.ParseQuery(uri.Query);

            if (query.TryGetValue("msg", out var message))
            {
                if (message == "passwordChanged" && !toast)
                {
                    toast = true;
                    ToastService.ShowSuccess("Password was changed! Please log in.");
                }

                StateHasChanged();
            }
        }
    }

    private async Task HandleValidSubmit_Click()
    {
        try
        {
            submitting = true;
            await Task.Delay(1000);

            // Authenticate user
            var (canLogin, message) = await AuthService.LoginAsync(parameter);

            if (!canLogin && message.Contains("Change Password"))
            {
                // Set Navigation Model
                Model.Username = parameter.Username;
                Model.Password = parameter.Password;

                Nav.NavigateTo("/changepassword");
                return;
            }

            // Check if the user can be logged in
            if (!canLogin)
            {
                ToastService.ShowWarning(message);
            }
            else
            {
                Nav.NavigateTo("/home", replace: true);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowWarning(ex.Message);
        }
        finally
        {
            submitting = false;
        }
    }

}
